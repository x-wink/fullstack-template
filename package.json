{
    "name": "fullstack-monorepo",
    "version": "1.0.0",
    "author": {
        "name": "xwink",
        "email": "1041367524@qq.com"
    },
    "scripts": {
        "client": "pnpm -F @apps/client dev",
        "admin": "pnpm -F @apps/admin dev",
        "server": "pnpm -F @apps/server dev",
        "docs": "pnpm -F @apps/docs dev",
        "icons": "pnpm -F @pkgs/icons dev",
        "build:apps": "pnpm -F @apps/* build",
        "build:pkgs": "pnpm -F @pkgs/icons build",
        "build": "run-s build:pkgs build:apps",
        "sftp": "pnpm -F @apps/* sftp",
        "release": "pnpm -F @apps/* release",
        "release:server": "pnpm -F @apps/server release",
        "release:admin": "pnpm -F @apps/admin release",
        "release:client": "pnpm -F @apps/client release",
        "rsa": "pnpm -F @pkgs/rsa gen",
        "publish": "npx wink-sftp -c sftp.json",
        "lint": "eslint . --ext .vue,.ts,.tsx --fix --ignore-path .gitignore --cache",
        "prettier": "prettier --write ./**/*.{vue,ts,tsx,less,json,md,html}",
        "prepare": "husky install"
    },
    "dependencies": {
        "@xwink/utils": "^1.0.0"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.1",
        "@commitlint/config-conventional": "^17.4.0",
        "@types/node": "^18.14.6",
        "@xwink/eslint-config": "^1.1.4",
        "@xwink/sftp": "^1.0.4",
        "eslint": "^8.54.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "nodemon": "^3.0.1",
        "npm-run-all": "^4.1.5",
        "prettier": "^3.1.0",
        "ts-node": "^10.9.1",
        "typescript": "5.2.2"
    },
    "lint-staged": {
        "*.{ts,tsx,vue}": [
            "pnpm lint"
        ],
        "*.{ts,tsx,vue,html,less,md,json}": [
            "pnpm prettier"
        ]
    }
}
