{
    "name": "fullstack-template",
    "version": "1.0.0",
    "packageManager": "pnpm@7.28.0",
    "author": {
        "name": "向文可",
        "email": "13202090601@163.com",
        "url": "https://github.com/x-wink"
    },
    "scripts": {
        "client": "pnpm -F @apps/client dev",
        "server": "pnpm -F @apps/server dev",
        "chat": "pnpm -F @apps/chat dev",
        "docs": "pnpm -F @apps/docs dev",
        "icons": "pnpm -F @pkgs/icons dev",
        "build:client": "pnpm -F @apps/client build",
        "build:server": "pnpm -F @apps/server build",
        "build:chat": "pnpm -F @apps/chat build",
        "build:docs": "pnpm -F @apps/docs build",
        "build:icons": "pnpm -F @pkgs/icons build",
        "build": "pnpm build:client && pnpm build:server && pnpm build:chat",
        "gen:docs": "pnpm -F @apps/docs gen",
        "gen:ui": "pnpm -F @pkgs/ui gen",
        "gen": "run-p \"gen:* {1} {2}\"",
        "publish": "npx wink-sftp -c sftp.json",
        "release": "pnpm build && pnpm run publish",
        "release:client": "pnpm build:client && pnpm run publish",
        "release:docs": "pnpm -F @apps/docs run release",
        "start": "node ./dist/server/index.js",
        "preview": "pnpm build && pnpm start",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx --fix --ignore-path .gitignore",
        "prettier": "prettier --write ./**/*.{vue,ts,tsx,js,jsx,css,json,md,html}",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@commitlint/cli": "^17.4.1",
        "@commitlint/config-conventional": "^17.4.0",
        "@types/node": "^18.14.6",
        "@xwink/eslint-config": "^1.0.0",
        "@xwink/sftp": "^1.0.2",
        "eslint": "^8.22.0",
        "husky": "^8.0.3",
        "lint-staged": "^13.1.0",
        "nodemon": "^2.0.21",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.7.1",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,vue}": [
            "pnpm lint"
        ],
        "*.{js,jsx,ts,tsx,vue,html,css,less,md}": [
            "pnpm prettier"
        ]
    }
}
