{
    "name": "@apps/server",
    "version": "1.0.0",
    "scripts": {
        "dev": "nodemon index.ts",
        "build": "set NODE_OPTIONS=--openssl-legacy-provider && tsc --noEmit && ncc build ./index.ts -o ../../dist/server && npm run copy-ssl && npm run copy-run",
        "copy-ssl": "ts-node ./scripts/copy.ts ./ssl ../../dist/server/ssl",
        "copy-run": "ts-node ./scripts/copy.ts ./scripts/run.sh ../../dist/server/run.sh"
    },
    "author": "向文可",
    "devDependencies": {
        "@types/connect-history-api-fallback": "^1.5.0",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.2",
        "@types/multer": "^1.4.7",
        "@types/mysql": "^2.15.21",
        "@types/uuid": "^9.0.1",
        "@vercel/ncc": "^0.36.1",
        "nodemon": "^2.0.21",
        "ts-node": "^10.9.1"
    },
    "dependencies": {
        "connect-history-api-fallback": "^2.0.0",
        "express": "^4.18.2",
        "jsonwebtoken": "^9.0.0",
        "log4js": "^6.9.1",
        "multer": "^1.4.5-lts.1",
        "mysql": "^2.18.1",
        "uuid": "^9.0.0",
        "wink-dao": "^1.0.2"
    }
}
