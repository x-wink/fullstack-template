{
    "name": "@apps/chat",
    "version": "1.0.0",
    "main": "index.ts",
    "scripts": {
        "dev": "nodemon index.ts",
        "build": "set NODE_OPTIONS=--openssl-legacy-provider && tsc --noEmit && ncc build ./index.ts -o ../../dist/chat && pnpm copy-run",
        "copy-run": "ts-node ../../scripts/copy.ts ../../scripts/run-server.sh ../../dist/run-server.sh"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/express-ws": "^3.0.1",
        "@vercel/ncc": "^0.36.1"
    },
    "dependencies": {
        "@pkgs/chat": "workspace:^",
        "@pkgs/lib": "workspace:^",
        "express": "^4.18.2",
        "express-ws": "^5.0.2"
    }
}
